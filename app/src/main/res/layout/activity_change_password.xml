<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_change_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgorud_color_lightblue"
    tools:context="com.quixomtbx.jewelrap.ChangePassword"
    android:orientation="vertical">

    <include layout="@layout/action_bar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/layout_margin_5dp"

            >
            <TextView
                android:textColor="@color/light_grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin"
                android:layout_marginBottom="@dimen/layout_margin"
                android:layout_marginLeft="@dimen/layout_margin_5dp"
                android:textSize="@dimen/text_title_size"
                android:text="Password are case-sensitive and must be at least 6 characters."/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/light_grey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:layout_marginBottom="@dimen/layout_margin"
                    android:layout_marginLeft="@dimen/layout_margin_5dp"
                    android:textSize="@dimen/text_title_size"
                    android:text="Current password"/>

                <EditText
                    android:id="@+id/et_oldPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:padding="@dimen/layout_margin"
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:inputType="textPassword"
                    android:fontFamily="defult"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/layout_margin"
             >
                <TextView
                    android:textColor="@color/light_grey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:layout_marginBottom="@dimen/layout_margin"
                    android:layout_marginLeft="@dimen/layout_margin_5dp"
                    android:textSize="@dimen/text_title_size"
                    android:text="New password"/>
                <EditText
                    android:id="@+id/et_newPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:padding="@dimen/layout_margin"
                    android:layout_marginLeft="@dimen/layout_margin_5dp"
                    android:inputType="textPassword"
                    android:fontFamily="defult"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/layout_margin"
                >
                <TextView
                    android:textColor="@color/light_grey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:layout_marginBottom="@dimen/layout_margin"
                    android:layout_marginLeft="@dimen/layout_margin_5dp"
                    android:textSize="@dimen/text_title_size"
                    android:text="Re-new password"/>
                <EditText
                    android:id="@+id/et_rePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:padding="@dimen/layout_margin"
                    android:layout_marginLeft="@dimen/layout_margin_5dp"
                    android:inputType="textPassword"
                    android:fontFamily="defult"
                    />
           </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin"
                android:visibility="visible">



                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple"
                    android:text="Change password"
                    android:textSize="15sp"
                    android:textColor="@color/white" />
               <!-- <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:background="@drawable/ripple"
                    android:text="Cancel"
                    android:textSize="15sp"
                    android:layout_marginLeft="@dimen/layout_margin_5dp"
                    android:textColor="@color/white" />
-->
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
